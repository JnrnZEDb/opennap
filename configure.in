AC_INIT(opennap.h)
AM_INIT_AUTOMAKE(opennap,0.10)
AM_PROG_CC_STDC
AC_C_BIGENDIAN

if test -d /usr/local/lib/mysql; then
	MYSQLLIBDIR=/usr/local/lib/mysql
	MYSQLINCDIR=/usr/local/include/mysql
elif test -d /usr/lib/mysql; then
	MYSQLLIBDIR=/usr/lib/mysql
	MYSQLINCDIR=/usr/include/mysql
else
	AC_MSG_ERROR(could not locate MySQL installation)
fi
AC_MSG_RESULT(MySQL header files are in $MYSQLINCDIR)
AC_MSG_RESULT(MySQL library files are in $MYSQLLIBDIR)
AC_SUBST(MYSQLINCDIR)
AC_SUBST(MYSQLLIBDIR)
AC_CHECK_LIB(z, compress2)
AC_CHECK_FILE(/dev/random, [AC_DEFINE(HAVE_DEV_RANDOM)])

ac_cv_warnings=yes
AC_ARG_ENABLE(warnings, [  --disable-warnings	Turn of GCC compiler warnings ],
	[ac_cv_warnings=$enableval])
if test $ac_cv_warnings != "no"; then
	CFLAGS="-W -Wall -Wmissing-prototypes -pedantic $CFLAGS"
fi
ac_cv_debug=yes
AC_ARG_ENABLE(debug, [  --disable-debug	Turn off memory debugging code],
	[ac_cv_debug=$enableval])
if test $ac_cv_debug = yes; then
	CFLAGS="-DDEBUG=1 $CFLAGS"
fi
AC_OUTPUT(Makefile)
